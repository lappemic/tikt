<%# Status badge for projects and subprojects %>
<%# Status colors: offered=blue, accepted=green, rejected=red, finished=gray %>
<% badge_class = case status
   when "offered" then "badge--draft"
   when "accepted" then "badge--paid"
   when "rejected" then "badge--overdue"
   when "finished" then "badge--sent"
   end %>
<span class="badge <%= badge_class %>"><%= status.titleize %></span>
