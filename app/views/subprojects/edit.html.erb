<% content_for(:title) { "Edit #{@subproject.name} - Tikt" } %>

<div class="page-header">
  <h1 class="page-header__title">Edit Subproject</h1>
</div>

<p class="mb-4">
  <%= link_to @subproject.project.client.name, @subproject.project.client %> /
  <%= link_to @subproject.project.name, @subproject.project %> /
  <%= @subproject.name %>
</p>

<div class="card">
  <div class="card__body">
    <%= render "form", subproject: @subproject, project: nil %>
  </div>
</div>

<div class="mt-6">
  <%= button_to "Delete Subproject", @subproject, method: :delete,
      class: "btn btn--danger",
      data: { turbo_confirm: "Are you sure? This will remove the subproject but keep its time entries." } %>
</div>
