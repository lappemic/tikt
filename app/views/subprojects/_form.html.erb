<%= form_with model: [@project, subproject].compact do |f| %>
  <% if subproject.errors.any? %>
    <div class="flash flash--alert mb-4">
      <strong><%= pluralize(subproject.errors.count, "error") %> prevented this subproject from being saved:</strong>
      <ul>
        <% subproject.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-input", rows: 3 %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :budget, class: "form-label" %>
      <%= f.number_field :budget, class: "form-input", step: 0.01, min: 0, placeholder: "Optional budget" %>
      <p class="form-hint">Leave blank for no budget limit.</p>
    </div>

    <div class="form-group">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status, Subproject::STATUSES.map { |s| [s.titleize, s] }, {}, class: "form-select" %>
    </div>
  </div>

  <div class="flex gap-2">
    <%= f.submit class: "btn btn--primary" %>
    <%= link_to "Cancel", subproject.persisted? ? subproject.project : @project, class: "btn btn--secondary" %>
  </div>
<% end %>
