<%= form_with model: project.persisted? ? project : [project.client, project] do |f| %>
  <% if project.errors.any? %>
    <div class="flash flash--alert mb-4">
      <strong><%= pluralize(project.errors.count, "error") %> prevented this project from being saved:</strong>
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input", autofocus: true %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :hourly_rate, class: "form-label" %>
      <%= f.number_field :hourly_rate, class: "form-input", step: 0.01, min: 0, placeholder: project.client.hourly_rate %>
      <p class="form-hint">Leave blank to use client's rate (<%= number_to_currency(project.client.hourly_rate) %>/hr).</p>
    </div>

    <div class="form-group">
      <%= f.label :budget, class: "form-label" %>
      <%= f.number_field :budget, class: "form-input", step: 0.01, min: 0, placeholder: "Optional" %>
      <p class="form-hint">Leave blank for no budget limit.</p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :status, class: "form-label" %>
    <%= f.select :status, Project::STATUSES.map { |s| [s.titleize, s] }, {}, class: "form-select" %>
  </div>

  <div class="flex gap-2">
    <%= f.submit class: "btn btn--primary" %>
    <%= link_to "Cancel", project.client, class: "btn btn--secondary" %>
  </div>
<% end %>
