<% content_for(:title) { "Edit #{@project.name} - Tikt" } %>

<div class="page-header">
  <h1 class="page-header__title">Edit Project</h1>
</div>

<div class="card">
  <div class="card__body">
    <%= render "form", project: @project %>
  </div>
</div>

<p class="mt-4">
  <%= button_to "Delete Project", @project, method: :delete, class: "btn btn--danger", data: { turbo_confirm: "Are you sure? This will delete all time entries for this project." } %>
</p>
